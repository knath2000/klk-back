# Frontend URL for CORS (update with your Vercel URL)
FRONTEND_URL=https://klk-front.vercel.app,http://localhost:3000

# Server Configuration
PORT=3001
NODE_ENV=production
HOST=0.0.0.0

# Database (Postgres / Supabase)
# Use SUPABASE_URL and SUPABASE_KEY for Supabase-managed Postgres, or DATABASE_URL for a standard Postgres connection string
SUPABASE_URL=https://your-supabase-project-ref.supabase.co
SUPABASE_KEY=your_supabase_service_role_key_here
# Optional generic Postgres connection string (e.g., postgres://user:pass@host:5432/dbname)
DATABASE_URL=postgres://user:password@host:5432/slang_chat

# LangDB AI Gateway Configuration
# LangDB gateway URL and API key. Store real values in Railway secrets, do NOT commit them.
LANGDB_GATEWAY_URL=https://api.us-east-1.langdb.ai/your-org-id/v1
LANGDB_API_KEY=your_langdb_api_key_here
LANGDB_MODEL=anthropic/claude-sonnet-4

# Streaming Configuration
ENABLE_STREAMING=true
ENABLE_PERSONA_SAFETY=true

# Request Configuration
REQUEST_TIMEOUT=30000
MAX_RETRIES=2

# Logging
LOG_LEVEL=info

# Railway-specific Configuration
# These will be automatically set by Railway
RAILWAY_STATIC_URL=
RAILWAY_PROJECT_ID=
RAILWAY_ENVIRONMENT_ID=